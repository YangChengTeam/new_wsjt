<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:gravity="left"
    android:orientation="horizontal"
    android:paddingTop="4dp">

    <ImageView
        android:id="@+id/iv_chat_head"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="6dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@mipmap/user_head_def" />

    <TextView
        android:id="@+id/tv_video_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:autoLink="phone|email|map|web"
        android:background="@mipmap/img_bubble_receive"
        android:drawableLeft="@mipmap/chat_item_video"
        android:drawablePadding="6dp"
        android:gravity="left|center_vertical"
        android:lineSpacingMultiplier="1.2"
        android:linksClickable="true"
        android:maxWidth="242dp"
        android:minHeight="36dp"
        android:paddingLeft="10dp"
        android:paddingTop="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="6dp"
        android:text="聊天时长 02:22"
        android:textColor="@color/chat_text_color"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_red_point"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:layout_marginLeft="6dp"
        android:visibility="gone"
        android:gravity="left|center_vertical"
        android:src="@mipmap/red_point_icon" />
</LinearLayout>
