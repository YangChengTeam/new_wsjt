<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="332dp"
        android:background="@drawable/common_input_bg"
        android:gravity="top|center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/open_vip_top_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="选择套餐"
                    android:textColor="@color/white"
                    android:textSize="16sp"></TextView>

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="12dp"
                    android:src="@mipmap/open_vip_close" />
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:src="@mipmap/up_arrow_icon" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/white"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_three_month"
                android:layout_width="76dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:background="@drawable/feed_selected"
                android:gravity="center"
                android:text="3个月VIP\n38元"
                android:textColor="@color/feed_line_select_color"
                android:textSize="14sp"></TextView>

            <TextView
                android:id="@+id/tv_half_year"
                android:layout_width="76dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:background="@drawable/feed_normal"
                android:gravity="center"
                android:text="半年VIP\n58元"
                android:textColor="@color/tab_tv_normal"
                android:textSize="14sp"></TextView>

            <TextView
                android:id="@+id/tv_one_year"
                android:layout_width="76dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:background="@drawable/feed_normal"
                android:gravity="center"
                android:text="一年VIP\n88元"
                android:textColor="@color/tab_tv_normal"
                android:textSize="14sp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center">

            <View
                android:layout_width="90dp"
                android:layout_height="0.5dp"
                android:background="@color/line_color"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="支付方式" />

            <View
                android:layout_width="90dp"
                android:layout_height="0.5dp"
                android:background="@color/line_color"></View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_vip_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/vip_top_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:drawableLeft="@mipmap/alipay_pay_icon"
                    android:drawablePadding="6dp"
                    android:text="支付宝"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_alipay_choose"
                    android:text="推荐"
                    android:textColor="@color/color_diy"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_alipay_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="12dp"
                    android:src="@mipmap/pay_selected_icon" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color"></View>

            <RelativeLayout
                android:id="@+id/layout_wx_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/vip_top_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:drawableLeft="@mipmap/wx_pay_icon"
                    android:drawablePadding="6dp"
                    android:text="微信"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_wx_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="12dp"
                    android:src="@mipmap/pay_normal_icon" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_pay"
                android:layout_width="266dp"
                android:layout_height="40dp"
                android:background="@drawable/pay_btn_bg"
                android:gravity="center"
                android:text="立即开通"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
