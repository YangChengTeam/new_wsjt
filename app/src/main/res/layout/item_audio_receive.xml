<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:gravity="left"
    android:orientation="vertical"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_chat_head"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="6dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@mipmap/user_head_def" />

        <LinearLayout
            android:id="@+id/layout_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@mipmap/img_bubble_receive"
            android:gravity="left|center"
            android:maxWidth="242dp"
            android:minHeight="36dp">

            <ImageView
                android:id="@+id/iv_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@mipmap/audio_receive_icon" />

            <TextView
                android:id="@+id/tv_audio_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="6dp"
                android:text="6''"
                android:textColor="@color/black1"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_audio_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="left">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:background="@drawable/common_white_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_audio_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="242dp"
                android:padding="6dp"
                android:textColor="@color/gray1"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/audio_turn_over"
                android:drawablePadding="2dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="6dp"
                android:text="转换完成"
                android:textColor="@color/gray2"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>