<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center"
    android:background="@color/bill_sticky_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="left|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bill_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019年5月"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:src="@mipmap/arrow_down" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/tv_turn_out_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/receive_money_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_receive_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/tv_turn_out_money"
            android:textColor="@color/receive_money_color"
            android:textSize="14sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:layout_toLeftOf="@+id/tv_bill_right"
            android:background="@color/line_color3"></View>

        <TextView
            android:id="@+id/tv_bill_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/bill_right_icon"
            android:drawablePadding="6dp"
            android:text="月账单"
            android:textColor="@color/receive_money_color"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>
