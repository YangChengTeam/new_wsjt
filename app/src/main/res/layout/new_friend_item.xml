<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_user_head"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_margin="14dp"
        android:src="@mipmap/user_head_def" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="left|center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王小明"
                    android:textColor="@color/black2"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_user_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你好，我是王小明"
                    android:textColor="@color/gray2"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_accept"
                android:layout_width="54dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:background="@drawable/accept_normal"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_accept_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接受"
                    android:textColor="@color/into_money_color"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="bottom"
            android:background="@color/border_line_color"></View>
    </LinearLayout>
</LinearLayout>
