<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:gravity="right"
    android:orientation="horizontal"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <RelativeLayout
        android:layout_width="252dp"
        android:layout_height="105dp"
        android:layout_marginLeft="6dp"
        android:background="@mipmap/share_send_bg">

        <TextView
            android:id="@+id/tv_share_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layout_share_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            android:lines="2"
            android:paddingLeft="10dp"
            android:paddingRight="12dp"
            android:text="周杰伦演唱会门票周杰伦演唱会门票周杰伦演唱会门票周杰伦演唱会门票"
            android:textColor="@color/chat_text_color"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/layout_share_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="9dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_share_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.3"
                android:lines="2"
                android:paddingRight="10dp"
                android:text="周杰伦2019年世界巡回演唱会门票赶紧来抢购啊，只限于5.18号，先到先得，抢完即止！"
                android:textColor="@color/share_content_color"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/iv_share_thumb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12dp"
                android:src="@mipmap/share_pre" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_chat_head"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="6dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@mipmap/default_header" />
</LinearLayout>