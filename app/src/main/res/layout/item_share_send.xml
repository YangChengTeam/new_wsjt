<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:gravity="right"
    android:orientation="horizontal"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <LinearLayout
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@mipmap/share_send_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_share_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left|center"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="2"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingRight="12dp"
            android:paddingBottom="6dp"
            android:text="周杰伦演唱会周杰伦演唱会周杰伦演唱会"
            android:textColor="@color/chat_text_color"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/layout_share_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="6dp"
            android:gravity="top|center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_share_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="top|left"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="2"
                android:paddingRight="10dp"
                android:text="周杰伦2019年唱会"
                android:textColor="@color/share_content_color"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_share_thumb"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/share_pre" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_chat_head"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="6dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@mipmap/user_head_def" />
</LinearLayout>