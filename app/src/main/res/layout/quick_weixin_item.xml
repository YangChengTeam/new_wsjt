<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_model"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_is_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:visibility="gone"
        android:src="@mipmap/is_vip" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_quick_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@mipmap/weixin_danliao" />

        <TextView
            android:id="@+id/tv_weixin_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="微信单聊"
            android:textColor="@color/black5"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_quick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="8dp"
        android:padding="8dp"
        android:src="@mipmap/add_quick_icon" />
</FrameLayout>